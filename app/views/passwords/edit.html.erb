<h1>Update your password</h1>

<%= form_with model: Current.user, url: edit_password_path, data: {turbo: false} do |form| %>
	<% if form.object.errors.any? %>
		<div class="alert alert-danger">
			<% form.object.errors.full_messages.each do |message| %>
			<div><%= message %></div>
		<% end %>
		</div>
	<% end %>
	<div class="mb-3">
		<%= form.label :password %>	
		<%= form.password_field :password, class:"form-control", placeholder: "New password" %>
	</div>
	<div class="mb-3">
		<%= form.label :passowrd_confimation %>
		<%= form.password_field :passowrd_confimation, class:"form-control", placeholder: "Confirm your new password"  %>
	</div>

	<div class="mb-3">
		<%= form.submit "Update password", class: "btn btn-primary" %>
	</div>

<% end %>